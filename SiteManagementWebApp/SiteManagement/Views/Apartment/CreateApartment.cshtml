@using SiteManagement.Models.DTOs;
@model CreateApartmentDTO;
<style>
    #position {
        position: absolute;
        left: 28%;
        top: 10%;
    }

</style>

<br />
<div style="width:40%;" id="position">
    <form class="avarage" asp-action="CreateApartment" asp-controller="Apartment" method="post">
        <h5>Daire ekleyin</h5> <br />
        <div class="form-floating mb-3">
            <input type="text" style="font-size:20px;" class="form-control" id="floatingInput" placeholder="Daire adı" asp-for="Name">
            <label for="floatingInput">Daire adı</label>
        </div>
        <button type="submit" class="btn btn-outline-primary" style="width:25rem; position:absolute; right:2%;">Ekle</button> <br /> <br />
        <h6>Vazmı geçtiniz <a href="https://localhost:44309/apartment/list/@ViewBag.BlockId">geri dönün</a> </h6>
    </form>
</div>