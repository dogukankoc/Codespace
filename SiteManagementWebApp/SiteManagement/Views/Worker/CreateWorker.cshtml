@model SiteManagement.Models.DTOs.CreateWorkerDTO;
<style>
    #position {
        position: absolute;
        left: 28%;
        top: 10%;
    }
</style>

<br />
<div style="width:40%;" id="position">
    <form class="avarage" asp-action="CreateWorker" asp-controller="Worker" method="post">
        <h5>Daire ekleyin</h5> <br />
        <div class="form-floating mb-3">
            <input type="text" style="font-size:20px;" class="form-control" id="floatingInput" placeholder="Görevli ismi" asp-for="NameSurname">
            <label for="floatingInput">Görevli ismi</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" style="font-size:20px;" class="form-control" id="floatingInput" placeholder="Görevi" asp-for="Duty">
            <label for="floatingInput">Görevi</label>
        </div>
        <button type="submit" class="btn btn-outline-primary" style="width:25rem; position:absolute; right:2%;">Ekle</button> <br /> <br />
        <h6>Vazmı geçtiniz <a href="https://localhost:44309/worker/workerlist/@ViewBag.siteId">geri dönün</a> </h6>
    </form>
</div>