@model SiteManagement.Models.DTOs.UpdateBlockDTO;
<style>
    #position {
        position: absolute;
        left: 28%;
        top: 10%;
    }

</style>
<br />
<div style="width:40%;" id="position">
    <form class="avarage" asp-action="UpdateBlock" asp-controller="Block" method="post">

        <h5>Düzenleyin</h5> <br />
        <div class="form-floating mb-3">
            <input type="text" style="font-size:20px;" class="form-control" id="floatingInput" placeholder="Blok adı" asp-for="BlockName">
            <label for="floatingInput">Blok adı</label>

        </div>


        <button type="submit" class="btn btn-outline-primary" style="width:25rem; position:absolute; right:2%;">Düzenle</button> <br /> <br />
        <h6>Vazmı geçtiniz <a href="https://localhost:44309/management/sitelist">geri dönün</a> </h6>

    </form>

</div>