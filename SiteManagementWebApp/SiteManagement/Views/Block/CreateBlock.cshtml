@model SiteManagement.Models.DTOs.CreateBlockDTO;

<style>
    #position{
        position:absolute;
        left:28%;
        top:10%;
    }

</style>
<br />
<div style="width:40%;" id="position">
    <form class="avarage" asp-action="CreateBlock" asp-controller="Block" method="post">
        <h5>Blok ekleyin</h5> <br />
        <div class="form-floating mb-3">
            <input type="text" style="font-size:20px;" class="form-control" id="floatingInput" placeholder="Blok adı" asp-for="Name">
            <label for="floatingInput">Blok adı</label>
        </div>
        <button type="submit" class="btn btn-outline-primary" style="width:25rem; position:absolute; right:2%;">Ekle</button> <br /> <br />
        <h6>Vazmı geçtiniz <a href="https://localhost:44309/management/sitelist">geri dönün</a> </h6>
    </form>
</div>